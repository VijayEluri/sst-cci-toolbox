<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
             version="1.0">
    <persistence-unit name="matchupdb">
        <provider>
            org.apache.openjpa.persistence.PersistenceProviderImpl
        </provider>
        <class>org.esa.cci.sst.data.Observation</class>
        <class>org.esa.cci.sst.data.DataSchema</class>
        <class>org.esa.cci.sst.data.DataFile</class>
        <class>org.esa.cci.sst.data.ObsVariable</class>
        <class>org.esa.cci.sst.data.Coincidence</class>

        <properties>
            <property name="openjpa.ConnectionDriverName" value="org.postgresql.Driver"/>
            <property name="openjpa.ConnectionURL" value="jdbc:postgresql://localhost:5432/mygisdb"/>
            <property name="openjpa.ConnectionUserName" value="boe"/>
            <property name="openjpa.ConnectionPassword" value="boe"/>
            <property name="openjpa.Log" value="DefaultLevel=TRACE,SQL=TRACE"/>
            <property name="openjpa.jdbc.SynchronizeMappings" value="buildSchema"/>
        </properties>
    </persistence-unit>
</persistence>
