<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.1.xsd
http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1 http://maven.apache.org/xsd/assembly-1.1.1.xsd">
    <id>bin</id>

    <formats>
        <format>tar.bz2</format>
        <!-- <format>dir</format> -->
    </formats>

    <includeBaseDirectory>true</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <directory>src/main/bin</directory>
            <includes>
                <include>*.sh</include>
                <include>pg*</include>
                <include>template-*</include>
            </includes>
            <outputDirectory>bin</outputDirectory>
            <fileMode>0775</fileMode>
            <filtered>true</filtered>
        </fileSet>

        <fileSet>
            <directory>src/main/bin-hl</directory>
            <includes>
                <include>*.sh</include>
                <include>pg*</include>
                <include>template-*</include>
            </includes>
            <outputDirectory>bin-hl</outputDirectory>
            <fileMode>0775</fileMode>
            <filtered>true</filtered>
        </fileSet>

        <fileSet>
            <directory>src/main/python</directory>
            <includes>
                <include>*.py</include>
            </includes>
            <outputDirectory>python</outputDirectory>
            <fileMode>0664</fileMode>
            <filtered>true</filtered>
        </fileSet>

        <fileSet>
            <directory>src/main/config</directory>
            <excludes>
                <exclude>phase1</exclude>
            </excludes>
            <outputDirectory>config</outputDirectory>
            <fileMode>0664</fileMode>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <includes>
                <include>com.bc.ceres:*</include>
                <include>org.esa.beam:*</include>
                <include>${project.groupId}:*</include>
            </includes>
            <!--
            <excludes>
                <exclude>com.bc.ceres:ceres-launcher</exclude>
            </excludes>
            -->
            <scope>runtime</scope>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <useTransitiveFiltering>false</useTransitiveFiltering>
            <outputDirectory>lib</outputDirectory>
            <outputFileNameMapping>
                ${artifact.artifactId}-${artifact.version}.${artifact.extension}
            </outputFileNameMapping>
            <fileMode>0664</fileMode>
        </dependencySet>

        <!--
        <dependencySet>
            <includes>
                <include>com.bc.ceres:ceres-launcher</include>
            </includes>
            <scope>runtime</scope>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <useTransitiveFiltering>false</useTransitiveFiltering>
            <outputDirectory>bin</outputDirectory>
            <outputFileNameMapping>
                ${artifact.artifactId}.${artifact.extension}
            </outputFileNameMapping>
            <fileMode>0444</fileMode>
        </dependencySet>
        -->

        <dependencySet>
            <excludes>
                <exclude>com.bc.ceres:*</exclude>
                <exclude>org.esa.beam:*</exclude>
                <exclude>${project.groupId}:*</exclude>
            </excludes>
            <scope>runtime</scope>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <useTransitiveFiltering>false</useTransitiveFiltering>
            <outputDirectory>lib</outputDirectory>
            <outputFileNameMapping>
                ${artifact.artifactId}-${artifact.version}.${artifact.extension}
            </outputFileNameMapping>
            <fileMode>0664</fileMode>
        </dependencySet>
    </dependencySets>

</assembly>
