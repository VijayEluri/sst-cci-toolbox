<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1 http://maven.apache.org/xsd/assembly-1.1.1.xsd">
    <id>bin</id>

    <formats>
        <format>dir</format>
    </formats>

    <includeBaseDirectory>true</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <directory>src/main/bin</directory>
            <directoryMode>0770</directoryMode>
            <includes>
                <include>*.sh</include>
                <include>pg*</include>
                <include>pm*</include>
            </includes>
            <outputDirectory>bin</outputDirectory>
            <fileMode>0770</fileMode>
            <filtered>true</filtered>
        </fileSet>

        <fileSet>
            <directory>src/main/python</directory>
            <directoryMode>0770</directoryMode>
            <includes>
                <include>*.py</include>
            </includes>
            <outputDirectory>python</outputDirectory>
            <fileMode>0770</fileMode>
            <filtered>true</filtered>
        </fileSet>

        <fileSet>
            <directory>src/main/config</directory>
            <directoryMode>0660</directoryMode>
            <includes>
                <include>*.properties</include>
                <include>*.config</include>
            </includes>
            <excludes>
                <exclude>*-TEMPLATE.properties</exclude>
            </excludes>
            <outputDirectory>config</outputDirectory>
            <fileMode>0660</fileMode>
            <filtered>true</filtered>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <scope>runtime</scope>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <useTransitiveFiltering>false</useTransitiveFiltering>
            <outputDirectory>lib</outputDirectory>
            <directoryMode>0664</directoryMode>
            <outputFileNameMapping>
                ${artifact.artifactId}-${artifact.version}.${artifact.extension}
            </outputFileNameMapping>
            <fileMode>0664</fileMode>
        </dependencySet>
    </dependencySets>

</assembly>
